.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  height: 100vh;
  background-color: #f8f8f8;
}

text {
  font-size: 80rpx;
  color: #3c5f81;
}

image {
  width: 220rpx;
}

.detail {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.bar {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}

.box {
  width: 33.3%;
  text-align: center;
}

.title-box {
  width: 33.3%;
  text-align: center;
  
  /* 设置粗体 */
  font-weight: bold;
}